<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Registraction form</h1>
    <form action="/addData" method="post" enctype="multipart/form-data">
      <table border="">
        <tr>
          <td>userName</td>
          <td><input name="userName" type="text" /></td>
        </tr>
        <tr>
          <td>Email</td>
          <td><input name="email" type="email" /></td>
        </tr>
        <tr>
          <td>Password</td>
          <td><input name="password" type="password" /></td>
        </tr>
        <tr>
          <td>City</td>
          <td>
            <select name="city" id="">
              <option value="Ahmedabad">Ahmedabad</option>
              <option value="Vadodra">Vadodra</option>
              <option value="Morbi">Morbi</option>
            </select>
          </td>
        </tr>
        <tr>
          <td>Gneder</td>
          <td>
            <input type="radio" name="gender" value="male" /> male
            <input type="radio" name="gender" value="female" /> female
          </td>
        </tr>
        <tr>
          <td>hobby</td>
          <td>
            <input name="hobby" type="checkbox" value="volleyball" /> volleyball
            <input name="hobby" type="checkbox" value="coding" /> coding
            <input name="hobby" type="checkbox" value="reading" /> reading
          </td>
        </tr>
        <tr>
          <td>Image</td>
          <td><input type="file" name="image" /></td>
        </tr>
        <tr>
          <td></td>
          <td><button>submit</button></td>
        </tr>
      </table>
    </form>

    <h2>All User Information</h2>
    <table border="">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Password</th>
          <th>City</th>
          <th>Gender</th>
          <th>Hobby</th>
          <th>image</th>
          <th colspan="2">events</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((item) => { %>
        <tr>
          <td><%= item.userName %></td>
          <td><%= item.email %></td>
          <td><%= item.password %></td>
          <td><%= item.city %></td>
          <td><%= item.gender %></td>
          <td><%= item.hobby %></td>
          <td>
            <img src="<%= item.image %>" height="100px" width="100px" alt="" />
          </td>

          <td>
            <a href="/delete/<%= item.id %>"><button>delete</button></a>
          </td>
          <td>
            <a href="/edit/?data=<%= encodeURIComponent(JSON.stringify(item))%>"
              ><button>edit</button></a
            >
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
